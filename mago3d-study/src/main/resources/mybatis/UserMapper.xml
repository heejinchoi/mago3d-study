<!-- 사용자 총 건수 -->
<select id="getUserTotalCount" parameterType="com.example.demo.domain.UserInfo" resultType="long">
	/* getUserTotalCount */
	SELECT COUNT(user_id)
	FROM user_info
</select>

<!-- 전체 목록 조회 -->
<select id="getUserList" parameterType="com.example.demo.domain.UserInfo" resultType="com.example.demo.domain.UserInfo">
	/* getUserTotalCount */
	SELECT * FROM user_info
</select>

